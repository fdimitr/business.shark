<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusinessSharkClient.View.ProductListView"
             Title="ProductListView">
    <CollectionView x:Name="ProductList"
                    ItemsSource="{Binding Items}"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10"
                      ColumnDefinitions="Auto,*"
                      ColumnSpacing="10">

                    <!-- Image column -->
                    <Image Grid.Column="0"
                           Source="{Binding Icon}"
                           WidthRequest="50"
                           HeightRequest="50"
                           Aspect="AspectFill"
                           VerticalOptions="Center" />

                    <!-- Text column -->
                    <Label Grid.Column="1"
                           Text="{Binding Name}"
                           FontSize="16"
                           VerticalOptions="Center"
                           LineBreakMode="TailTruncation" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>