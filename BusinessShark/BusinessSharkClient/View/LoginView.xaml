<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusinessSharkClient.View.LoginView"
             Title="Login">
    <Grid RowDefinitions=".3*, .7*">
        <Image Aspect="AspectFill"  Source="business_plan.png" />
        <Grid BackgroundColor ="{DynamicResource Primary}" Opacity=".8" />
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit" 
                   Source="shark.png"
                   HeightRequest="150" />
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2" CornerRadius="30,30,0,0" Fill="White" />
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold" 
                    FontFamily="latobold"
                    FontSize="Medium"
                    Text="Welcome!"
                    TextColor="#2D2D2D" />
                <Label FontFamily="latoregular"
                       Text="Log in to continue"
                       TextColor="#A3A3A4" />
                <Grid Margin="0,20,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesome-solid"
                                Glyph="&#xf0e0;"
                                Size="44"
                                Color="{DynamicResource Primary}" />
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                           Placeholder="EMAIL"
                           VerticalOptions="Center"
                           x:Name="EmailEntry" />
                </Grid>
                <Grid Margin="0,20,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesome-solid"
                                Glyph="&#xf084;"
                                Size="44"
                                Color="{DynamicResource Primary}" />
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                           Placeholder="PASSWORD"
                           IsPassword="True"
                           VerticalOptions="Center"
                           x:Name="PasswordEntry" />
                </Grid>
                <Button Margin="0,30,0,0"
                        BackgroundColor="{DynamicResource Primary}"
                        CornerRadius="10"
                        HeightRequest="60"
                        Text="LOG IN"
                        TextColor="#FBF6FD"
                        Clicked="OnLoginClicked"/>
                <Label Margin="0,20,0,-10"
                          HorizontalOptions="Center"
                          Text="Forgot Your Password?"
                          TextDecorations="Underline"
                          TextColor="Blue" />
                <Button Margin="0,30,0,0"
                        BackgroundColor="#FBF6FD"
                        HeightRequest="60"
                        Text="Create your Account"
                        TextColor="{DynamicResource Primary}" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>