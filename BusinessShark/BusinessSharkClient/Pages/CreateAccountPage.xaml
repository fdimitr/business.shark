<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusinessSharkClient.Pages.CreateAccountPage"
             Title="Create Account">

    <Grid RowDefinitions=".3*, .7*">
        <!-- Background -->
        <Image Aspect="AspectFill" Source="business_plan.png" />
        <Grid BackgroundColor="{DynamicResource Primary}" Opacity=".8" />
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit" 
                   Source="shark.png"
                   HeightRequest="150" />
        </Grid>

        <!-- Registration Form -->
        <Grid x:Name="RegisterGrid" Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2" CornerRadius="30,30,0,0" Fill="White" />
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                       FontFamily="latobold"
                       FontSize="Medium"
                       Text="Create your account"
                       TextColor="#2D2D2D" />
                <Label FontFamily="latoregular"
                       Text="Fill all fields to continue"
                       TextColor="#A3A3A4" />

                <!-- Login Field -->
                <Grid Margin="0,20,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesome-solid"
                                Glyph="&#xf007;"
                                Size="44"
                                Color="{DynamicResource Primary}" />
                        </Image.Source>
                    </Image>
                    <Entry x:Name="LoginEntry"
                           Grid.Column="1"
                           Placeholder="Login"
                           FontFamily="latoregular"
                           TextColor="#2D2D2D"
                           PlaceholderColor="#A3A3A4" />
                </Grid>

                <!-- Name Field -->
                <Grid Margin="0,10,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesome-solid"
                                Glyph="&#xf2bd;"
                                Size="44"
                                Color="{DynamicResource Primary}" />
                        </Image.Source>
                    </Image>
                    <Entry x:Name="NameEntry"
                           Grid.Column="1"
                           Placeholder="Name"
                           FontFamily="latoregular"
                           TextColor="#2D2D2D"
                           PlaceholderColor="#A3A3A4" />
                </Grid>

                <!-- Password Field -->
                <Grid Margin="0,10,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesome-solid"
                                Glyph="&#xf023;"
                                Size="44"
                                Color="{DynamicResource Primary}" />
                        </Image.Source>
                    </Image>
                    <Entry x:Name="PasswordEntry"
                           Grid.Column="1"
                           Placeholder="Password"
                           IsPassword="True"
                           FontFamily="latoregular"
                           TextColor="#2D2D2D"
                           PlaceholderColor="#A3A3A4" />
                </Grid>

                <!-- Company Name Field -->
                <Grid Margin="0,10,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesome-solid"
                                Glyph="&#xf1ad;"
                                Size="44"
                                Color="{DynamicResource Primary}" />
                        </Image.Source>
                    </Image>
                    <Entry x:Name="CompanyEntry"
                           Grid.Column="1"
                           Placeholder="Company Name"
                           FontFamily="latoregular"
                           TextColor="#2D2D2D"
                           PlaceholderColor="#A3A3A4" />
                </Grid>

                <!-- Submit Button -->
                <Button Margin="0,30,0,0"
                        Text="Create Account"
                        FontFamily="latobold"
                        FontSize="Medium"
                        TextColor="White"
                        BackgroundColor="{DynamicResource Primary}"
                        CornerRadius="15"
                        HeightRequest="55"
                        Command="{Binding CreateAccountCommand}"
                        Clicked="OnCreateAccountClicked" />

                <!-- Back to Login -->
                <HorizontalStackLayout HorizontalOptions="Center" Margin="0,15,0,0">
                    <Label Text="Already have an account?"
                           FontFamily="latoregular"
                           TextColor="#A3A3A4"
                           VerticalOptions="Center" />
                    <Button Text="Log in"
                            FontFamily="latobold"
                            FontSize="Small"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource Primary}"
                            Command="{Binding NavigateToLoginCommand}"
                            VerticalOptions="Center"
                            Clicked="OnNavigateToLoginClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
